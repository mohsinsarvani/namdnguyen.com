{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": ["^eslint"],
      "groupName": "eslint"
    },
    {
      "packagePatterns": ["gatsby"],
      "groupName": "gatsby"
    },
    {
      "packageNames": ["react", "react-dom"],
      "groupName": "react"
    }
  ],
  "ignoreUnstable": true,
  "labels": ["renovate"],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 16,
  "rangeStrategy": "bump",
  "bumpVersion": null,
  "semanticCommits": true,
  "timezone": "America/Chicago",
  "automerge": true,
  "schedule": "after 10pm and before 3am on sunday",
  "major": {
      "automerge": false,
      "schedule": "after 10pm on the 1st and 15th day of the month"
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": "after 3am and before 5am on monday"
  }
}
